import praw
from praw.helpers import comment_stream

r = praw.Reddit("badlanguagebot /u/captainonboard")
r.login()

target_text = "Fuck" , "Penis" , "Dick", "Cock" ,"Asshole" ,"Motherfucker"
response_text = "Why are you using this bad language?  Don't use foul or abusive language. Let everything you say be good and helpful, (づ｡◕‿‿◕｡)づ  so that your words will be an encouragement to those who hear them.ヽ(◉◡◔)ﾉ  "

processed = []
while True:
    for c in comment_stream(r, 'all'):
        if target_text in c.body and c.id not in processed:
            c.reply(response_text)
            processed.append(c.id)
